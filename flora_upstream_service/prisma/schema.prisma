generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flora {
  id              String   @id @default(uuid()) @db.Uuid
  common_name     String
  scientific_name String   @unique
  user_id         String
  type            PostType
}

enum PostType {
  public
  private
}
